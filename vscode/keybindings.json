// Place your key bindings in this file to override the defaultsauto[]
[
    {
        "key": "alt+f12",
        "command": "-editor.action.peekDefinition",
        "when": "editorHasDefinitionProvider && editorTextFocus && !inReferenceSearchEditor && !isInEmbeddedEditor"
    },
    {
        "key": "alt+f12",
        "command": "workbench.action.terminal.focus"
    },
    {
        "key": "shift+cmd+a",
        "command": "workbench.action.toggleActivityBarVisibility"
    },
    {
        "key": "shift+cmd+e",
        "command": "workbench.view.explorer",
        "when": "viewContainer.workbench.view.explorer.enabled"
    },
    {
        "key": "shift+cmd+e",
        "command": "-workbench.view.explorer",
        "when": "viewContainer.workbench.view.explorer.enabled"
    },
    {
        "key": "shift+cmd+s",
        "command": "workbench.action.toggleStatusbarVisibility"
    },
    {
        "key": "shift+cmd+g",
        "command": "-workbench.action.terminal.findPrevious",
        "when": "terminalFindFocused && terminalHasBeenCreated || terminalFindFocused && terminalProcessSupported || terminalFocus && terminalHasBeenCreated || terminalFocus && terminalProcessSupported"
    },
    {
        "key": "shift+cmd+g",
        "command": "workbench.view.scm",
        "when": "workbench.scm.active"
    },
    {
        "key": "ctrl+shift+g",
        "command": "-workbench.view.scm",
        "when": "workbench.scm.active"
    },
    {
        "key": "cmd+[IntlBackslash]",
        "command": "workbench.action.terminal.split",
        "when": "terminalFocus && terminalProcessSupported || terminalFocus && terminalWebExtensionContributedProfile"
    },
    {
        "key": "ctrl+alt+cmd+[IntlBackslash]",
        "command": "-workbench.action.terminal.split",
        "when": "terminalFocus && terminalProcessSupported || terminalFocus && terminalWebExtensionContributedProfile"
    },
    {
        "key": "cmd+[IntlBackslash]",
        "command": "workbench.action.splitEditor"
    },
    {
        "key": "ctrl+alt+cmd+[IntlBackslash]",
        "command": "-workbench.action.splitEditor"
    },
    {
        "key": "cmd+[IntlBackslash]",
        "command": "workbench.action.terminal.splitInstance",
        "when": "terminalProcessSupported && terminalTabsFocus"
    },
    {
        "key": "ctrl+alt+cmd+[IntlBackslash]",
        "command": "-workbench.action.terminal.splitInstance",
        "when": "terminalProcessSupported && terminalTabsFocus"
    },
    {
        "key": "ctrl+b z",
        "command": "workbench.action.toggleMaximizedPanel"
    },
    {
        "key": "cmd+k cmd+z",
        "command": "explorer.newFile"
    },
    {
        "key": "alt+cmd+b",
        "command": "workbench.action.chat.openInSidebar",
        "when": "!chatViewletVisible"
    },
    // 1) Alt+Cmd+B opens chat if hidden, otherwise focuses input
    {
        "key": "alt+cmd+b",
        "command": "workbench.action.chat.openInSidebar",
        "when": "!chatViewletVisible"
    },
    {
        "key": "alt+cmd+b",
        "command": "workbench.panel.chat.view.copilot.focus",
        "when": "chatViewletVisible"
    },
    // 2) Alt+Cmd+V hides the auxiliary chat bar and returns focus
    {
        "key": "alt+cmd+b",
        "command": "workbench.action.toggleAuxiliaryBar",
        "when": "auxiliaryBarVisible"
    }
]